{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "ES2021"
    ],
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2018",
  },
  "include": [
    "src/**/*"
  ]
}